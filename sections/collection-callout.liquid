{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

<div class="page-width {{ section.settings.custom_class }}">
  <div class="feature-row feature-row--small-none">

    <!-- LEFT SIDE IMAGES -->
    <div class="feature-row__item feature-row__callout-image">
      <div class="callout-images" data-aos="collection-callout">
        {%- if section.blocks.size > 0 -%}
          <div class="callout-image-centered">
            {% for block in section.blocks %}
              <div class="callout-image callout-image--{{ forloop.index }}">
                {% if block.settings.image != blank %}
                  <img 
                    src="{{ block.settings.image | img_url: '600x' }}" 
                    alt="{{ block.settings.alt_text | escape }}" 
                    loading="lazy"
                    class="callout-img"
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {%- else -%}
          <div class="callout-image-centered">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
      </div>
    </div>

    <!-- RIGHT SIDE TEXT -->
    <div class="feature-row__item feature-row__text feature-row__text--{{ section.settings.layout }} feature-row__callout-text larger-text">
      <div class="feature-row__content">
        {% if section.settings.subtitle != blank %}
          <p class="subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        {% if section.settings.title != blank %}
          <h2 class="h3">{{ section.settings.title }}</h2>
        {% endif %}
        <div class="rte">
          {% if section.settings.text != blank %}
            <p>{{ section.settings.text }}</p>
          {% endif %}
        </div>
        {% if section.settings.cta_text1 != blank %}
          <a href="{{ section.settings.cta_link1 }}" class="btn{% if section.settings.cta_text2 != blank %} btn--no-animate{% endif %}">
            {{ section.settings.cta_text1 }}
          </a>
        {% endif %}
        {% if section.settings.cta_text2 != blank %}
          <a href="{{ section.settings.cta_link2 }}" class="btn btn--no-animate">
            {{ section.settings.cta_text2 }}
          </a>
        {% endif %}
      </div>
    </div>

  </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}


{% schema %}
{
  "name": "Custom Image Callout",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Brand New"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Custom Image Callout"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Add your own images using the blocks below."
    },
    {
      "type": "text",
      "id": "cta_text1",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link1",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "cta_text2",
      "label": "Secondary Button Text"
    },
    {
      "type": "url",
      "id": "cta_link2",
      "label": "Secondary Button Link"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Image Layout Side",
      "default": "right",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "Show Divider",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image Callout",
      "blocks": [
        { "type": "image_block" },
        { "type": "image_block" },
        { "type": "image_block" }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
