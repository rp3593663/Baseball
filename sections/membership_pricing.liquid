{% style %}

.membership-pricing-section {
  background-color: {{ section.settings.bg_color }};
  padding-top: {{ section.settings.padding_top_desktop }}px;
  padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
}

@media (max-width: 767px) {
  .membership-pricing-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
}

{% endstyle %}


<section class="membership-pricing-section {{ section.settings.custom_class }}">
  <div class="page-width">

    <!-- MEMBERSHIP CARDS -->
    <div class="membership-pricing-wrapper">
      {% for block in section.blocks %}
        <div class="membership-card">

          {% if block.settings.icon %}
            <img class="membership-icon" src="{{ block.settings.icon | img_url: '200x' }}" alt="{{ block.settings.title }}">
          {% endif %}

          <h3 class="membership-card-title">{{ block.settings.title }}</h3>
          <p class="membership-card-desc">{{ block.settings.desc }}</p>

          <div class="membership-card-price">${{ block.settings.price }}</div>

          <ul class="membership-card-features">
            {% if block.settings.feature_1 %}<li>{{ block.settings.feature_1 }}</li>{% endif %}
            {% if block.settings.feature_2 %}<li>{{ block.settings.feature_2 }}</li>{% endif %}
            {% if block.settings.feature_3 %}<li>{{ block.settings.feature_3 }}</li>{% endif %}
            {% if block.settings.feature_4 %}<li>{{ block.settings.feature_4 }}</li>{% endif %}
          </ul>

          <a href="{{ block.settings.button_url }}" class="membership-card-cta btn">
            {{ block.settings.button_label }}
          </a>

        </div>
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Membership Pricing",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom CSS Class"
    },

    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Top (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Bottom (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Top (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Bottom (Mobile)",
      "default": 40
    }
  ],

  "blocks": [
    {
      "type": "membership_card",
      "name": "Membership Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Membership Title",
          "default": "Premium Member"
        },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Short Description",
          "default": "Aenean molestie posuere placerat suscipit aptent mus."
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "89"
        },

        {
          "type": "text",
          "id": "feature_1",
          "label": "Feature 1",
          "default": "Nullam tellus neque aptent"
        },
        {
          "type": "text",
          "id": "feature_2",
          "label": "Feature 2",
          "default": "Elementum vulputate diam"
        },
        {
          "type": "text",
          "id": "feature_3",
          "label": "Feature 3",
          "default": "Dignissim penatibus diam libero"
        },
        {
          "type": "text",
          "id": "feature_4",
          "label": "Feature 4",
          "default": "Natoque congue penatibus"
        },

        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Join Member"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button Link"
        }
      ]
    }
  ],

  "max_blocks": 3,

  "presets": [
    {
      "name": "Membership Pricing"
    }
  ]
}
{% endschema %}
