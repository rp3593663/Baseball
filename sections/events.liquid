{% style %}
  .events-section {
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }

  @media (max-width: 767px) {
    .events-section {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
{% endstyle %}

<section class="events-section {{ section.settings.custom_class }}">
  <div class="page-width">
    <div class="events_header">
      <h2>Upcoming MLB Development Events</h2>
      <p>
        Explore our lineup of professional development and networking events designed to support emerging baseball
        operations talent and connect future leaders with MLB organizations.
      </p>
    </div>
    <div class="events-wrapper">
      {% for block in section.blocks %}
        <div class="event-item">
          <div class="event_image">
            {% if block.settings.event_image %}
              <img src="{{ block.settings.event_image | img_url: '800x' }}" alt="{{ block.settings.event_title }}">
            {% endif %}
          </div>
          <div class="event_content">
            <h2 class="event_title">{{ block.settings.event_title }}</h2>
            {% if block.settings.event_description %}
              <div class="event_desc">{{ block.settings.event_description }}</div>
            {% endif %}
          </div>
          <div class="events_info">
            {% if block.settings.event_cost %}
              <div class="event_cost">{{ block.settings.event_cost }}</div>
            {% endif %}

            <div class="evens_all_meta">
              {% if block.settings.event_date %}
                <div class="event_meta">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11.9999 13.43C13.723 13.43 15.1199 12.0331 15.1199 10.31C15.1199 8.58687 13.723 7.19 11.9999 7.19C10.2768 7.19 8.87988 8.58687 8.87988 10.31C8.87988 12.0331 10.2768 13.43 11.9999 13.43Z" stroke="#FFFFFF" stroke-width="1.5"/>
                    <path d="M3.61995 8.49C5.58995 -0.169998 18.42 -0.159997 20.38 8.5C21.53 13.58 18.37 17.88 15.6 20.54C13.59 22.48 10.41 22.48 8.38995 20.54C5.62995 17.88 2.46995 13.57 3.61995 8.49Z" stroke="#FFFFFF" stroke-width="1.5"/>
                  </svg>
                  {{ block.settings.event_date }}
                </div>
              {% endif %}
              {% if block.settings.event_location %}
                <div class="event_meta">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20.6191 8.45C19.5691 3.83 15.5391 1.75 11.9991 1.75C11.9991 1.75 11.9991 1.75 11.9891 1.75C8.45912 1.75 4.41912 3.82 3.36912 8.44C2.19912 13.6 5.35912 17.97 8.21912 20.72C9.27912 21.74 10.6391 22.25 11.9991 22.25C13.3591 22.25 14.7191 21.74 15.7691 20.72C18.6291 17.97 21.7891 13.61 20.6191 8.45ZM11.9991 13.46C10.2591 13.46 8.84912 12.05 8.84912 10.31C8.84912 8.57 10.2591 7.16 11.9991 7.16C13.7391 7.16 15.1491 8.57 15.1491 10.31C15.1491 12.05 13.7391 13.46 11.9991 13.46Z" fill="#FFFFFF"/>
                  </svg>
                {{ block.settings.event_location }}</div>
              {% endif %}
              {% if block.settings.event_contact %}
                <div class="event_meta"><strong>Contact:</strong> {{ block.settings.event_contact }}</div>
              {% endif %}
            </div>

            {% if block.settings.button_label and block.settings.button_link %}
              <a href="{{ block.settings.button_link }}" class="event_btn btn">
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Events",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom CSS Class"
    },

    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Top (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Bottom (Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Top (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "label": "Padding Bottom (Mobile)",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        { "type": "image_picker", "id": "event_image", "label": "Event Image" },
        { "type": "text", "id": "event_title", "label": "Event Title" },
        { "type": "html", "id": "event_description", "label": "Description" },
        { "type": "text", "id": "event_date", "label": "Event Date" },
        { "type": "text", "id": "event_location", "label": "Location" },
        { "type": "richtext", "id": "event_contact", "label": "Contact" },
        { "type": "text", "id": "event_cost", "label": "Cost" },
        { "type": "text", "id": "button_label", "label": "Button Label", "default": "Learn More" },
        { "type": "url", "id": "button_link", "label": "Button Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Events"
    }
  ]
}
{% endschema %}
