{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-premium-features-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-premium-features-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-premium-features-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-premium-features-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
  }

  .ai-premium-features-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-premium-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .ai-premium-feature-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border: 2px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_radius }}px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .ai-premium-feature-card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    border-color: {{ block.settings.card_hover_border_color }};
  }

  .ai-premium-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto 24px;
    background-color: {{ block.settings.icon_bg_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-premium-feature-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.5 }}px;
    height: {{ block.settings.icon_size | times: 0.5 }}px;
    stroke: {{ block.settings.icon_color }};
  }

  .ai-premium-feature-title-{{ ai_gen_id }} {
    color: {{ block.settings.feature_title_color }};
    font-size: 20px;
    margin: 0 0 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-premium-feature-desc-{{ ai_gen_id }} {
    color: {{ block.settings.feature_desc_color }};
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 990px) {
    .ai-premium-features-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 590px) {
    .ai-premium-features-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-premium-features-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-premium-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-premium-features-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_subtitle != blank %}
      <div class="ai-premium-features-header-{{ ai_gen_id }}">
