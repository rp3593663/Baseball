{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-exec-reports-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-exec-reports-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-exec-reports-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
    position: relative;
  }

  .ai-exec-reports-accent-line-{{ ai_gen_id }} {
    width: {{ block.settings.accent_line_width }}px;
    height: {{ block.settings.accent_line_height }}px;
    background-color: {{ block.settings.accent_color }};
    margin: 0 auto 24px;
  }

  .ai-exec-reports-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    font-weight: 700;
    letter-spacing: -0.5px;
    line-height: 1.2;
  }

  .ai-exec-reports-intro-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_size }}px;
    color: {{ block.settings.text_color }};
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .ai-exec-reports-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 50px;
  }

  .ai-exec-reports-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 32px 28px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-exec-reports-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 10.0 }});
    border-color: {{ block.settings.accent_color }};
  }

  .ai-exec-reports-card-number-{{ ai_gen_id }} {
    position: absolute;
    top: -12px;
    left: 24px;
    background-color: {{ block.settings.accent_color }};
    color: {{ block.settings.card_background }};
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 16px;
  }

  .ai-exec-reports-card-icon-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    margin-bottom: 8px;
  }

  .ai-exec-reports-card-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.accent_color }};
    fill: none;
  }

  .ai-exec-reports-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-exec-reports-footer-{{ ai_gen_id }} {
    background: linear-gradient(135deg, {{ block.settings.footer_bg_start }} 0%, {{ block.settings.footer_bg_end }} 100%);
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 40px;
    text-align: center;
  }

  .ai-exec-reports-footer-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.footer_text_size }}px;
    color: {{ block.settings.footer_text_color }};
    margin: 0;
    line-height: 1.6;
    font-weight: 500;
  }

  @media screen and (max-width: 768px) {
    .ai-exec-reports-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }

    .ai-exec-reports-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-exec-reports-intro-{{ ai_gen_id }} {
      font-size: {{ block.settings.intro_size | times: 0.9 }}px;
    }

    .ai-exec-reports-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-exec-reports-card-{{ ai_gen_id }} {
      padding: 28px 20px;
    }

    .ai-exec-reports-footer-{{ ai_gen_id }} {
      padding: 30px 20px;
    }
  }
{% endstyle %}

