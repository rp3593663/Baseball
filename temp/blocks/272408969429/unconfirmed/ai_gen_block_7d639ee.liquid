      {% if block.settings.hero_title != blank %}
        <h1 class="membership-hero-section__title-{{ ai_gen_id }}">{{ block.settings.hero_title }}</h1>
      {% endif %}
      
      {% if block.settings.hero_subtitle != blank %}
        <h2 class="membership-hero-section__subtitle-{{ ai_gen_id }}">{{ block.settings.hero_subtitle }}</h2>
      {% endif %}
      
      {% if block.settings.hero_description != blank %}
        <div class="membership-hero-section__description-{{ ai_gen_id }}">
          {{ block.settings.hero_description }}
        </div>
      {% endif %}
    </div>
  </div>

  <div class="membership-pricing-wrapper membership-pricing-wrapper-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign card_enabled_key = 'card_' | append: i | append: '_enabled'
        assign card_image_key = 'card_' | append: i | append: '_image'
        assign card_title_key = 'card_' | append: i | append: '_title'
        assign card_description_key = 'card_' | append: i | append: '_description'
        assign card_monthly_price_key = 'card_' | append: i | append: '_monthly_price'
        assign card_yearly_price_key = 'card_' | append: i | append: '_yearly_price'
        assign card_feature_1_key = 'card_' | append: i | append: '_feature_1'
        assign card_feature_2_key = 'card_' | append: i | append: '_feature_2'
        assign card_feature_3_key = 'card_' | append: i | append: '_feature_3'
        assign card_feature_4_key = 'card_' | append: i | append: '_feature_4'
        assign card_button_text_key = 'card_' | append: i | append: '_button_text'
        assign card_button_link_key = 'card_' | append: i | append: '_button_link'

        assign card_enabled = block.settings[card_enabled_key]
        assign card_image = block.settings[card_image_key]
        assign card_title = block.settings[card_title_key]
        assign card_description = block.settings[card_description_key]
        assign card_monthly_price = block.settings[card_monthly_price_key]
        assign card_yearly_price = block.settings[card_yearly_price_key]
        assign card_feature_1 = block.settings[card_feature_1_key]
        assign card_feature_2 = block.settings[card_feature_2_key]
        assign card_feature_3 = block.settings[card_feature_3_key]
        assign card_feature_4 = block.settings[card_feature_4_key]
        assign card_button_text = block.settings[card_button_text_key]
        assign card_button_link = block.settings[card_button_link_key]
      %}

      {% if card_enabled %}
        <div class="membership-card membership-card-{{ ai_gen_id }}" data-card="{{ i }}">
          {% if card_image %}
            <div class="membership-card__image-{{ ai_gen_id }}">
              <img
                src="{{ card_image | image_url: width: 160 }}"
                alt="{{ card_image.alt | escape }}"
                loading="lazy"
                width="80"
                height="80"
              >
            </div>
          {% else %}
            <div class="membership-card__image-{{ ai_gen_id }}">
              <div class="membership-card__image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
          {% endif %}

          {% if card_title != blank %}
            <h3 class="membership-card__title-{{ ai_gen_id }}">{{ card_title }}</h3>
          {% endif %}

          {% if card_description != blank %}
            <p class="membership-card__description-{{ ai_gen_id }}">{{ card_description }}</p>
          {% endif %}

          <div class="membership-card__price-toggle-{{ ai_gen_id }}">
            <span class="membership-card__toggle-label-{{ ai_gen_id }} monthly-label active">Monthly</span>
            <div class="membership-card__toggle-switch-{{ ai_gen_id }}" data-toggle="{{ i }}">
              <div class="membership-card__toggle-slider-{{ ai_gen_id }}"></div>
            </div>
            <span class="membership-card__toggle-label-{{ ai_gen_id }} yearly-label">Yearly</span>
          </div>

          <div class="membership-card__price-{{ ai_gen_id }}" data-price-display="{{ i }}">
            $<span class="price-amount">{{ card_monthly_price }}</span>
          </div>
          <div class="membership-card__price-period-{{ ai_gen_id }}" data-period-display="{{ i }}">
            per month
          </div>

          <ul class="membership-card__features-{{ ai_gen_id }}">
            {% if card_feature_1 != blank %}
              <li class="membership-card__feature-{{ ai_gen_id }}">{{ card_feature_1 }}</li>
            {% endif %}
            {% if card_feature_2 != blank %}
              <li class="membership-card__feature-{{ ai_gen_id }}">{{ card_feature_2 }}</li>
            {% endif %}
            {% if card_feature_3 != blank %}
              <li class="membership-card__feature-{{ ai_gen_id }}">{{ card_feature_3 }}</li>
            {% endif %}
            {% if card_feature_4 != blank %}
              <li class="membership-card__feature-{{ ai_gen_id }}">{{ card_feature_4 }}</li>
            {% endif %}
          </ul>

          {% if card_button_text != blank %}
            <a href="{{ card_button_link }}" class="membership-card__button-{{ ai_gen_id }}">
              {{ card_button_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</membership-pricing-{{ ai_gen_id }}>

<script>
  (function() {
    class MembershipPricing{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.pricingData = {
          1: {
            monthly: {{ block.settings.card_1_monthly_price }},
            yearly: {{ block.settings.card_1_yearly_price }}
          },
          2: {
            monthly: {{ block.settings.card_2_monthly_price }},
            yearly: {{ block.settings.card_2_yearly_price }}
          },
          3: {
            monthly: {{ block.settings.card_3_monthly_price }},
            yearly: {{ block.settings.card_3_yearly_price }}
          }
        };
      }

      connectedCallback() {
        this.setupToggleSwitches();
      }

      setupToggleSwitches() {
        const toggles = this.querySelectorAll('[data-toggle]');
        
        toggles.forEach((toggle) => {
          const cardNumber = toggle.getAttribute('data-toggle');
          const card = this.querySelector(`[data-card="${cardNumber}"]`);
          const priceDisplay = card.querySelector('[data-price-display]');
          const periodDisplay = card.querySelector('[data-period-display]');
          const monthlyLabel = card.querySelector('.monthly-label');
          const yearlyLabel = card.querySelector('.yearly-label');
          
          toggle.addEventListener('click', () => {
            const isYearly = toggle.classList.contains('yearly');
            
            if (isYearly) {
              toggle.classList.remove('yearly');
              priceDisplay.querySelector('.price-amount').textContent = this.pricingData[cardNumber].monthly;
              periodDisplay.textContent = 'per month';
              monthlyLabel.classList.add('active');
              yearlyLabel.classList.remove('active');
            } else {
              toggle.classList.add('yearly');
              priceDisplay.querySelector('.price-amount').textContent = this.pricingData[cardNumber].yearly;
              periodDisplay.textContent = 'per year';
              monthlyLabel.classList.remove('active');
              yearlyLabel.classList.add('active');
            }
          });
        });
      }
    }

    customElements.define('membership-pricing-{{ ai_gen_id }}', MembershipPricing{{ ai_gen_id }});
  })();
</script>

