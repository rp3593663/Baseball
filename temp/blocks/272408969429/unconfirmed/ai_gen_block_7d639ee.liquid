    color: {{ block.settings.feature_color }};
    padding: 10px 0;
    border-bottom: 1px solid {{ block.settings.feature_border_color }};
    line-height: 1.5;
  }

  .membership-card__feature-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .membership-card__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 16px;
    transition: background-color 0.3s ease;
  }

  .membership-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

