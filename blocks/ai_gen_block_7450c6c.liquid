{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-resource-library-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-resource-library-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-resource-library-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-resource-library-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 16px;
    font-weight: 500;
    text-transform: uppercase;
  }

  .ai-resource-library-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
  }

  .ai-resource-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .ai-resource-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border: 1px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_radius }}px;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .ai-resource-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    border-color: {{ block.settings.card_hover_border }};
  }

  .ai-resource-image-{{ ai_gen_id }} {
    width: 100%;
    height: 240px;
    overflow: hidden;
    background-color: {{ block.settings.image_bg_color }};
    position: relative;
  }

  .ai-resource-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-resource-item-{{ ai_gen_id }}:hover .ai-resource-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-resource-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0b2041 0%, #1a3a6b 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-resource-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-resource-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 16px;
    left: 16px;
    background-color: {{ block.settings.badge_bg_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-resource-content-{{ ai_gen_id }} {
    padding: 24px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-resource-category-{{ ai_gen_id }} {
    color: {{ block.settings.category_color }};
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
  }

  .ai-resource-title-{{ ai_gen_id }} {
    color: {{ block.settings.resource_title_color }};
    font-size: 28px;
    font-weight: 400;
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-resource-desc-{{ ai_gen_id }} {
    color: {{ block.settings.resource_desc_color }};
    font-size: 15px;
    line-height: 1.6;
    margin: 0 0 0px;
    flex-grow: 1;
  }

  .ai-resource-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: {{ block.settings.link_color }};
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: gap 0.3s ease;
  }

  .ai-resource-link-{{ ai_gen_id }}:hover {
    gap: 12px;
  }

  .ai-resource-link-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
  }

  @media screen and (max-width: 768px) {
    .ai-resource-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-resource-library-title-{{ ai_gen_id }} {
