{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-strategy-reports-{{ ai_gen_id }} {
    padding: 80px 20px;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  }

  .ai-strategy-reports-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-strategy-reports-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-strategy-reports-heading-{{ ai_gen_id }} {
    font-size: 48px;
    font-weight: 700;
    color: #0b2041;
    margin: 0 0 20px;
    letter-spacing: -1px;
    line-height: 1.1;
  }

  .ai-strategy-reports-intro-{{ ai_gen_id }} {
    font-size: 20px;
    color: #4a5568;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-strategy-reports-content-{{ ai_gen_id }} {
    background: #ffffff;
    border-radius: 16px;
    padding: 60px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .ai-strategy-reports-subtitle-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: #0b2041;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin: 0 0 30px;
  }

  .ai-strategy-reports-list-{{ ai_gen_id }} {
    display: grid;
    gap: 20px;
    margin-bottom: 40px;
  }

  .ai-strategy-reports-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #0b2041;
    transition: all 0.3s ease;
  }

  .ai-strategy-reports-item-{{ ai_gen_id }}:hover {
    background: #e8eef5;
    transform: translateX(8px);
  }

  .ai-strategy-reports-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .ai-strategy-reports-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: #0b2041;
    fill: none;
    stroke-width: 2.5;
  }

  .ai-strategy-reports-text-{{ ai_gen_id }} {
    font-size: 18px;
    color: #2d3748;
    line-height: 1.6;
    margin: 0;
  }

  .ai-strategy-reports-footer-{{ ai_gen_id }} {
    background: linear-gradient(135deg, #0b2041 0%, #1a3a6b 100%);
    padding: 30px;
    border-radius: 12px;
    text-align: center;
  }

  .ai-strategy-reports-footer-text-{{ ai_gen_id }} {
    font-size: 18px;
    color: #ffffff;
    margin: 0;
    line-height: 1.6;
    font-weight: 500;
  }

  @media screen and (max-width: 768px) {
    .ai-strategy-reports-{{ ai_gen_id }} {
      padding: 50px 16px;
    }

    .ai-strategy-reports-heading-{{ ai_gen_id }} {
      font-size: 32px;
    }

    .ai-strategy-reports-intro-{{ ai_gen_id }} {
      font-size: 16px;
    }

    .ai-strategy-reports-content-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-strategy-reports-text-{{ ai_gen_id }} {
      font-size: 16px;
    }

    .ai-strategy-reports-item-{{ ai_gen_id }}:hover {
      transform: translateX(4px);
    }
  }

{% endstyle %}

<div class="ai-strategy-reports-{{ ai_gen_id }} {% if block.settings.custom_class != blank %}{{ block.settings.custom_class }}{% endif %}" {{ block.shopify_attributes }}>
  <div class="ai-strategy-reports-container-{{ ai_gen_id }}">
